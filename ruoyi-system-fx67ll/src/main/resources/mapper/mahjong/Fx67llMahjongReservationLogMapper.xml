            <if test="reservationStartTime != null">reservation_start_time = #{reservationStartTime},</if>
            <if test="reservationEndTime != null">reservation_end_time = #{reservationEndTime},</if>
            <if test="reservationContact != null">reservation_contact = #{reservationContact},</if>
            <if test="reservationAmount != null">reservation_amount = #{reservationAmount},</if>
            <if test="reservationStatus != null and reservationStatus != ''">reservation_status =
                #{reservationStatus},
            </if>
            <if test="reservationRemark != null">reservation_remark = #{reservationRemark},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where mahjong_reservation_log_id = #{mahjongReservationLogId}
    </update>

    <delete id="deleteFx67llMahjongReservationLogByMahjongReservationLogId" parameterType="Long">
        delete
        from fx67ll_mahjong_reservation_log
        where mahjong_reservation_log_id = #{mahjongReservationLogId}
    </delete>

    <delete id="deleteFx67llMahjongReservationLogByMahjongReservationLogIds" parameterType="String">
        delete from fx67ll_mahjong_reservation_log where mahjong_reservation_log_id in
        <foreach item="mahjongReservationLogId" collection="array" open="(" separator="," close=")">
            #{mahjongReservationLogId}
        </foreach>
    </delete>
</mapper>