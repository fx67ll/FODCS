<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.fx67ll.mahjong.mapper.Fx67llMahjongReservationLogMapper">

    <resultMap type="Fx67llMahjongReservationLog" id="Fx67llMahjongReservationLogResult">
        <result property="mahjongReservationLogId" column="mahjong_reservation_log_id"/>
        <result property="userId" column="user_id"/>
        <result property="createBy" column="create_by"/>
        <result property="mahjongRoomId" column="mahjong_room_id"/>
        <result property="mahjongRoomName" column="mahjong_room_name"/>
        <result property="reservationStartTime" column="reservation_start_time"/>
        <result property="reservationEndTime" column="reservation_end_time"/>
        <result property="reservationContact" column="reservation_contact"/>
        <result property="reservationAmount" column="reservation_amount"/>
        <result property="reservationStatus" column="reservation_status"/>
        <result property="reservationRemark" column="reservation_remark"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 扩展结果集：继承父类结果集，仅补充用户表关联字段 -->
    <!-- 继承已有的父类结果集 -->
    <resultMap
            type="Fx67llMahjongReservationLogExt"
            id="Fx67llMahjongReservationLogExtResult"
            extends="Fx67llMahjongReservationLogResult"
    >
        <!-- 仅需定义新增的用户表关联字段（父类字段已通过extends继承） -->
        <result property="userName" column="user_name"/> <!-- 来自sys_user表的用户名 -->
        <result property="phonenumber" column="phonenumber"/> <!-- 来自sys_user表的联系方式 -->
    </resultMap>

    <sql id="selectFx67llMahjongReservationLogVo">
        select mahjong_reservation_log_id,
               user_id,
               create_by,
               mahjong_room_id,
               mahjong_room_name,
               reservation_start_time,
               reservation_end_time,
               reservation_contact,
               reservation_amount,
               reservation_status,
               reservation_remark,
               del_flag,
               create_time,
               update_by,
               update_time
        from fx67ll_mahjong_reservation_log
    </sql>

    <!-- 查询指定麻将室某天的所有预约记录（含用户名、用户联系方式） -->
    <select id="selectReservationLogByRoomAndDate" resultMap="Fx67llMahjongReservationLogExtResult">
        SELECT
        rl.mahjong_reservation_log_id,
        rl.user_id,
        rl.create_by,
        rl.mahjong_room_id,
        rl.mahjong_room_name,
        rl.reservation_start_time,
        rl.reservation_end_time,
        rl.reservation_contact,
        rl.reservation_amount,
        rl.reservation_status,
        rl.reservation_remark,
        rl.del_flag,
        rl.create_time,  <!-- 预约记录的创建时间 -->
        rl.update_by,
        rl.update_time,
        su.user_name,
        su.phonenumber
        FROM
        fx67ll_mahjong_reservation_log rl
        LEFT JOIN
        sys_user su ON rl.user_id = su.user_id
        WHERE
        rl.del_flag = '0'  <!-- 固定条件：只查未删除的记录 -->

        <!-- 原需求场景固定条件：查询“某个麻将室+某天”时，排除取消状态 -->
        <if test="mahjongRoomId != null and reservationDate != null and reservationDate != ''">
            AND rl.reservation_status != '1'  <!-- '1'代表取消，排除该状态 -->
        </if>

        <!-- 动态条件1：指定麻将室 -->
        <if test="mahjongRoomId != null">
            AND rl.mahjong_room_id = #{mahjongRoomId}
        </if>

        <!-- 动态条件2：指定日期 -->
        <if test="reservationDate != null and reservationDate != ''">
            AND DATE_FORMAT(rl.reservation_start_time, '%Y%m%d') = #{reservationDate}
        </if>

        <!-- 动态条件3：指定用户 -->
        <if test="userId != null">
            AND rl.user_id = #{userId}
        </if>

        <!-- 动态条件4：指定状态 -->
        <if test="reservationStatus != null and reservationStatus != ''">
            AND rl.reservation_status = #{reservationStatus}
        </if>
        ORDER BY
        rl.create_time DESC  <!-- 核心修改：按预约记录的创建时间倒序，最新的在第一个 -->
    </select>

    <select id="selectFx67llMahjongReservationLogList" parameterType="Fx67llMahjongReservationLog"
            resultMap="Fx67llMahjongReservationLogResult">
        <include refid="selectFx67llMahjongReservationLogVo"/>
        <where>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="createBy != null  and createBy != ''">and create_by like concat('%',
                #{createBy}, '%')
            </if>
            <if test="mahjongRoomId != null ">and mahjong_room_id = #{mahjongRoomId}</if>
            <if test="mahjongRoomName != null  and mahjongRoomName != ''">and mahjong_room_name like concat('%',
                #{mahjongRoomName}, '%')
            </if>
            <if test="reservationContact != null  and reservationContact != ''">and reservation_contact like concat('%',
                #{reservationContact}, '%')
            </if>
            <if test="reservationAmount != null ">and reservation_amount = #{reservationAmount}</if>
            <if test="reservationStatus != null  and reservationStatus != ''">and reservation_status =
                #{reservationStatus}
            </if>
            <if test="reservationRemark != null  and reservationRemark != ''">and reservation_remark like concat('%',
                #{reservationRemark}, '%')
            </if>
            <if test="delFlag != null  and delFlag != ''">and del_flag = #{delFlag}</if>
            <if test="beginCreateTime != null and endCreateTime != ''">and create_time between #{beginCreateTime} and
                #{endCreateTime}
            </if>
            <if test="updateBy != null  and updateBy != ''">and update_by = #{updateBy}</if>
            <if test="beginUpdateTime != null and endUpdateTime != ''">and update_time between #{beginUpdateTime} and
                #{endUpdateTime}
            </if>
        </where>
        order by STR_TO_DATE(update_time, "%Y-%m-%d %H:%i:%s") desc
    </select>

    <select id="selectFx67llMahjongReservationLogByMahjongReservationLogId" parameterType="Long"
            resultMap="Fx67llMahjongReservationLogResult">
        <include refid="selectFx67llMahjongReservationLogVo"/>
        where mahjong_reservation_log_id = #{mahjongReservationLogId}
    </select>

    <insert id="insertFx67llMahjongReservationLog" parameterType="Fx67llMahjongReservationLog" useGeneratedKeys="true"
            keyProperty="mahjongReservationLogId">
        insert into fx67ll_mahjong_reservation_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="mahjongRoomId != null">mahjong_room_id,</if>
            <if test="mahjongRoomName != null">mahjong_room_name,</if>
            <if test="reservationStartTime != null">reservation_start_time,</if>
            <if test="reservationEndTime != null">reservation_end_time,</if>
            <if test="reservationContact != null">reservation_contact,</if>
            <if test="reservationAmount != null">reservation_amount,</if>
            <if test="reservationStatus != null and reservationStatus != ''">reservation_status,</if>
            <if test="reservationRemark != null">reservation_remark,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="mahjongRoomId != null">#{mahjongRoomId},</if>
            <if test="mahjongRoomName != null">#{mahjongRoomName},</if>
            <if test="reservationStartTime != null">#{reservationStartTime},</if>
            <if test="reservationEndTime != null">#{reservationEndTime},</if>
            <if test="reservationContact != null">#{reservationContact},</if>
            <if test="reservationAmount != null">#{reservationAmount},</if>
            <if test="reservationStatus != null and reservationStatus != ''">#{reservationStatus},</if>
            <if test="reservationRemark != null">#{reservationRemark},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateFx67llMahjongReservationLog" parameterType="Fx67llMahjongReservationLog">
        update fx67ll_mahjong_reservation_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="mahjongRoomId != null">mahjong_room_id = #{mahjongRoomId},</if>
